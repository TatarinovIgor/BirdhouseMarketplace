{
  "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "username": {
          "title": "Username",
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "phone": {
          "title": "Phone",
          "type": "string",
          "format": "tel",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            }
          }
        },
        "userType": {
          "title": "Please select one",
          "type": "object",
          "properties": {
            "isBlogger": {
              "title": "I am blogger",
              "type": "boolean"
            },
            "isAdvertiser": {
              "title": "I am advertiser",
              "type": "boolean"
            }
          }
        }
      },
      "required": [
        "username",
        "phone",
        "email",
        "userType"
      ],
      "additionalProperties": false
    }
  }
}

